<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".ui.VarakaYazdirActivity">

    <include
        android:id="@+id/toolbarVarakaYazdir"
        layout="@layout/toolbar_no_icon"
        android:layout_weight=".1"
      android:layout_height="0dp"
    android:layout_width="match_parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:layout_margin="10dp"
        app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/varaka_print_kocaeli"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tc/VergiNo"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight=".1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvTcVergiNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".95"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="    No :"
                android:layout_weight=".4"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvVarakaNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:layout_weight=".5"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="İlgilinin Adı,Soyadı"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight=".1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvIlgiliAdSoyad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="12sp"/>


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ruhsat No"
                    android:textStyle="bold"
                    android:layout_weight=".9"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight=".1"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvRuhsatNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="12sp"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Plaka"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvPlakaNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="İkamet Adresi"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvIkametAdresi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="İhlal Adresi"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvIhlalAdresi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="12sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="İhlal Tarih/Saat"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold"
                android:layout_weight=".1"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvIhlalTarihSaat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tvTanzim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="İhlal Bendi"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvIhlalBendi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="12sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="İhlal Açıklama"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvIhlalAciklama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="16sp"
                android:text="MUHATABIN ADI SOYADI\n İMZASI"
                android:layout_weight="1.3"
                android:textSize="10dp"/>



        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text=".... / ..../  20.."/>

                <TextView
                    android:id="@+id/tvYetkili"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Görevli Personel"
                    android:textSize="10dp" />

            </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/printUkomeMetin"
                    android:textSize="8dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight=".2"
       android:orientation="horizontal"
       android:weightSum="2">


       <com.google.android.material.button.MaterialButton
           android:id="@+id/btnYazdir"
           android:layout_width="0dp"
           android:layout_height="50dp"
           android:layout_marginStart="25dp"
           android:layout_marginEnd="5dp"
           android:layout_weight="1"
           android:text="Yazdır"

           android:textAllCaps="false" />

       <com.google.android.material.button.MaterialButton
           android:id="@+id/btnSmsGonder"
           android:layout_width="0dp"
           android:layout_height="50dp"
           android:layout_weight="1"
           android:textAllCaps="false"
           android:layout_marginStart="5dp"
         android:layout_marginEnd="25dp"
           android:text="Sms Gönder"/>



   </LinearLayout>

</LinearLayout>
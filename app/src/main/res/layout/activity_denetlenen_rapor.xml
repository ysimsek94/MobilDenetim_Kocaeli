<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DenetlenenRaporActivity">
    <include
        android:id="@+id/toolbarDenetlenenRapor"
        layout="@layout/toolbar_no_icon"/>

                <RelativeLayout
                    android:layout_below="@id/toolbarDenetlenenRapor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDenetleyen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tvEmptyListRapor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

                </RelativeLayout>

</RelativeLayout>
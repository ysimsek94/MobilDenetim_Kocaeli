<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context=".ui.RuhsatAraActivity">

    <include
        android:id="@+id/toolbarRuhsatAra"
        layout="@layout/toolbar_no_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tipPlaka"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="60dp"

            app:endIconDrawable="@drawable/scanner_icon"
            app:endIconMode="custom"
            app:endIconTint="@color/color2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPlakaNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plaka (41 X XXXX )"
                android:inputType="textCapCharacters"
                android:gravity="center"
                android:textSize="20dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlakaNoAra"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:cornerRadius="8dp"
            android:layout_marginHorizontal="70dp"
            android:elevation="8dp"
            android:text="Ara"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textStyle="normal" />



    </LinearLayout>
</LinearLayout>